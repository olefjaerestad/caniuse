{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "module": "ES2020",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": { "classnameTransform": "asIs" }
      }
    ],
    "target": "ES2015",
    "noUnusedLocals": true,
    "typeRoots": [
      "./node_modules/@types", 
      "./src/typings"
    ]
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
