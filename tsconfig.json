{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "module": "ES2015",
    "target": "ES2015",
    "noUnusedLocals": true,
    "typeRoots": [
      "./node_modules/@types", 
      "./src/typings"
    ]
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
